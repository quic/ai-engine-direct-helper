// version.rc.in
#define VER_FILEVERSION             @QUALLA_MAJOR_VERSION@,@QUALLA_MINOR_VERSION@,@QUALLA_PATCH_VERSION@,0
#define VER_FILEVERSION_STR         "@QUALLA_MAJOR_VERSION@.@QUALLA_MINOR_VERSION@.@QUALLA_PATCH_VERSION@.@QUALLA_RELEASE_DATE@\0"

#define VER_PRODUCTVERSION          @QUALLA_MAJOR_VERSION@,@QUALLA_MINOR_VERSION@,@QUALLA_PATCH_VERSION@,0
#define VER_PRODUCTVERSION_STR      "@QUALLA_MAJOR_VERSION@.@QUALLA_MINOR_VERSION@.@QUALLA_PATCH_VERSION@.@QUALLA_RELEASE_DATE@\0"
//

1 VERSIONINFO
FILEVERSION VER_FILEVERSION
PRODUCTVERSION VER_PRODUCTVERSION
BEGIN
  BLOCK "StringFileInfo"
  BEGIN
    BLOCK "040904E4"
    BEGIN
      VALUE "FileDescription", "@FileDescription@"
      VALUE "FileVersion", VER_FILEVERSION_STR
	  VALUE "InternalName", "@PRODUCT_NAME@"
	  VALUE "LegalCopyright", "@QUALLA_COPYRIGHT@"
	  VALUE "ProductName", "@PRODUCT_NAME@"
      VALUE "ProductVersion", VER_PRODUCTVERSION_STR
    END
  END
  /* For some reason the ProductVersion would not appear unless I add the following section: VarFileInfo */
  BLOCK "VarFileInfo"
  BEGIN
    VALUE "Translation", 0x409, 1252
  END
END